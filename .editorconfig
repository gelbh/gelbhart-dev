# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{erb,html}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

[*.{scss,css}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

