<% content_for :title, page_title("Hevy Tracker | TOS") %>
<% meta_description "Terms of service for Hevy Tracker for Google Sheets. Understand our service terms, usage guidelines, and requirements for using our workout data sync tool." %>

<!-- Hero Section -->
<section class="position-relative hevy-tracker-hero" data-controller="scroll-animation" style="min-height: 40vh; padding-top: 6rem; padding-bottom: 2rem;">
    <div class="hevy-tracker-gradient-bg"></div>

    <div class="container py-3 position-relative zindex-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8 fade-in-view">
                <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                    <i class="bx bx-file-blank fs-1 text-primary"></i>
                </div>
                <h1 class="display-6 mb-2">Terms of Service</h1>
                <p class="text-light opacity-75 mb-0">Hevy Tracker for Google Sheets™</p>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="container py-5 mt-4" data-controller="scroll-animation">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Back Button (Desktop) -->
            <%= link_to hevy_tracker_path,
               class: "btn btn-outline-primary mb-4 d-none d-lg-inline-flex align-items-center" do %>
                <i class="bx bx-arrow-back me-2"></i>Back to Hevy Tracker
            <% end %>

            <!-- Back Button (Mobile) -->
            <%= link_to hevy_tracker_path,
               class: "btn btn-outline-primary mb-4 d-lg-none d-flex align-items-center justify-content-center" do %>
                <i class="bx bx-arrow-back me-2"></i>Back
            <% end %>

            <!-- Terms Sections -->
            <div class="card hevy-tracker-card border-0 shadow-lg mb-4 fade-in-view delay-1">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="bx bx-check-shield fs-4 text-primary"></i>
                        </div>
                        <h2 class="h4 mb-0">1. Terms</h2>
                    </div>
                    <p class="text-muted mb-0">By accessing Hevy Tracker for Google Sheets™, you agree to be bound by these terms of service. Please read them carefully.</p>
                </div>
            </div>

            <div class="card hevy-tracker-card border-0 shadow-lg mb-4 fade-in-view delay-2">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="bx bx-key fs-4 text-info"></i>
                        </div>
                        <h2 class="h4 mb-0">2. Use License</h2>
                    </div>
                    <p class="text-muted mb-0">This addon requires a valid Hevy Pro subscription and API key. Your license to use this addon is contingent on maintaining an active subscription.</p>
                </div>
            </div>

            <div class="card hevy-tracker-card border-0 shadow-lg mb-4 fade-in-view delay-3">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="bx bx-error fs-4 text-warning"></i>
                        </div>
                        <h2 class="h4 mb-0">3. Disclaimer</h2>
                    </div>
                    <p class="text-muted mb-0">The addon is provided "as is". We make no warranties about the completeness, reliability, or accuracy of the data sync process.</p>
                </div>
            </div>

            <div class="card hevy-tracker-card border-0 shadow-lg mb-4 fade-in-view delay-4">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-danger bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="bx bx-block fs-4 text-danger"></i>
                        </div>
                        <h2 class="h4 mb-0">4. Limitations</h2>
                    </div>
                    <p class="text-muted mb-0">We are not liable for any data loss or interruption of service. You are responsible for maintaining backups of your workout data.</p>
                </div>
            </div>

            <div class="card hevy-tracker-card border-0 shadow-lg mb-4 fade-in-view delay-5">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                            <i class="bx bx-refresh fs-4 text-success"></i>
                        </div>
                        <h2 class="h4 mb-0">5. Revisions</h2>
                    </div>
                    <p class="text-muted mb-0">We may revise these terms at any time. By using this addon, you agree to be bound by the current version of these terms of service.</p>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="text-center mt-5 fade-in-view delay-6">
                <p class="text-muted">
                    Have questions? <%= link_to "Contact us", contact_path, class: "text-primary" %> or read our <%= link_to "Privacy Policy", hevy_tracker_privacy_path, class: "text-primary" %>
                </p>
            </div>
        </div>
    </div>
</section>
