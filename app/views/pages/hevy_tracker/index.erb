                                <div class="step-number-inner">1</div>
                            </div>
                            <div class="step-body">
                                <h5 class="mb-2">Copy Template</h5>
                                <p class="mb-0 text-muted small">
                                    <%= link_to "Copy spreadsheet", hevy_tracker_spreadsheet_path, class: "text-primary fw-semibold" %> to Drive
