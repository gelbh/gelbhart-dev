<% content_for :title, page_title("Hevy Tracker") %>
<% meta_description "Connect your Hevy workout data to Google Sheets™ with our secure OAuth integration. Easy setup guide for syncing fitness tracking between platforms." %>

<!-- Hero Section with Gradient Background -->
<section class="position-relative hevy-tracker-hero" data-controller="scroll-animation">
    <!-- Animated Gradient Background -->
    <div class="hevy-tracker-gradient-bg"></div>

    <div class="container py-4 position-relative zindex-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8 fade-in-view">
                <%= image_tag "logos/hevy-tracker-logo.png", width: 70, height: 70, class: "mb-3", alt: "Hevy Tracker", loading: "lazy", decoding: "async" %>
                <h1 class="display-5 mb-2">Hevy Tracker</h1>
                <p class="lead text-light mb-2">Connect Hevy to Google Sheets™</p>
                <p class="text-light opacity-75 mb-0">
                    Sync your workout data from Hevy to Google Sheets™ with secure OAuth integration. Track your fitness progress with the power of spreadsheets.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="container py-5 mt-4" data-controller="scroll-animation">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">

            <!-- Getting Started - Featured Card -->
            <div class="card hevy-tracker-card border-0 shadow-lg mb-4 fade-in-view delay-1">
                <div class="card-body p-5">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bx bx-rocket fs-3 text-primary"></i>
                        </div>
                        <h2 class="h3 mb-0">Getting Started</h2>
                    </div>

                    <div class="alert alert-info mb-4">
                        <div class="d-flex">
                            <i class="bx bx-info-circle fs-4 me-3"></i>
                            <div>
                                <strong>Quick Setup Guide:</strong>
                                <ol class="mb-0 ps-3 mt-2">
                                    <li class="mb-2">Make a copy of <%= link_to "this template spreadsheet", hevy_tracker_spreadsheet_path, class: "fw-semibold text-primary" %></li>
                                    <li class="mb-2">Install <%= link_to "Hevy Tracker Add-on", "https://workspace.google.com/marketplace/app/hevy_tracker/221696974247", target: "_blank", rel: "noopener", class: "fw-semibold text-primary" %> from Extensions menu</li>
                                    <li class="mb-2">Get your API key from <%= link_to "Hevy Developer Settings", "https://hevy.com/settings?developer", target: "_blank", rel: "noopener", class: "fw-semibold text-primary" %></li>
                                    <li>Grant OAuth consent when prompted</li>
                                </ol>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a href="https://workspace.google.com/marketplace/app/hevy_tracker/221696974247" target="_blank" rel="noopener" class="btn btn-primary btn-lg">
                            <i class="bx bx-download me-2"></i>Install Add-on
                        </a>
                    </div>
                </div>
            </div>

            <!-- Features Grid -->
            <div class="row g-4 mb-4 fade-in-view delay-2">
                <div class="col-md-6">
                    <div class="card hevy-tracker-card border-0 shadow h-100">
                        <div class="card-body p-4">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                                <i class="bx bx-lock-alt fs-3 text-success"></i>
                            </div>
                            <h4 class="h5 mb-3">Secure OAuth</h4>
                            <p class="text-muted mb-0">Industry-standard OAuth 2.0 authentication ensures your data remains private and secure.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card hevy-tracker-card border-0 shadow h-100">
                        <div class="card-body p-4">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                                <i class="bx bx-sync fs-3 text-info"></i>
                            </div>
                            <h4 class="h5 mb-3">Auto Sync</h4>
                            <p class="text-muted mb-0">Automatically sync your workout data from Hevy to your personal spreadsheet.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card hevy-tracker-card border-0 shadow h-100">
                        <div class="card-body p-4">
                            <div class="bg-warning bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                                <i class="bx bx-spreadsheet fs-3 text-warning"></i>
                            </div>
                            <h4 class="h5 mb-3">Google Sheets™</h4>
                            <p class="text-muted mb-0">Leverage the power of spreadsheets to analyze and visualize your fitness data.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card hevy-tracker-card border-0 shadow h-100">
                        <div class="card-body p-4">
                            <div class="bg-danger bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                                <i class="bx bx-dumbbell fs-3 text-danger"></i>
                            </div>
                            <h4 class="h5 mb-3">Hevy Pro</h4>
                            <p class="text-muted mb-0">Works seamlessly with your Hevy Pro subscription and API access.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Required Access -->
            <div class="card hevy-tracker-card border-0 shadow mb-4 fade-in-view delay-3">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bx bx-shield-alt-2 fs-4 text-primary"></i>
                        </div>
                        <h3 class="h4 mb-0">Required Permissions</h3>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="bx bx-spreadsheet fs-5 text-primary"></i>
                                </div>
                                <div>
                                    <strong class="d-block mb-1">View and manage spreadsheets</strong>
                                    <p class="text-muted small mb-0">To update your workout tracking spreadsheet with Hevy data</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                    <i class="bx bx-cloud fs-5 text-primary"></i>
                                </div>
                                <div>
                                    <strong class="d-block mb-1">External API access</strong>
                                    <p class="text-muted small mb-0">To sync workout data from Hevy's servers</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Requirements -->
            <div class="card hevy-tracker-card border-0 shadow mb-4 fade-in-view delay-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bx bx-list-check fs-4 text-primary"></i>
                        </div>
                        <h3 class="h4 mb-0">Requirements</h3>
                    </div>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex align-items-center mb-2">
                            <i class="bx bx-check-circle text-success me-3 fs-5"></i>
                            <span>Hevy Pro subscription</span>
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bx bx-check-circle text-success me-3 fs-5"></i>
                            <span>Hevy API key (from <%= link_to "Developer Settings", "https://hevy.com/settings?developer", target: "_blank", rel: "noopener", class: "text-primary" %>)</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Privacy Notice -->
            <div class="card hevy-tracker-card border-0 shadow mb-4 fade-in-view delay-5">
                <div class="card-body p-4">
                    <div class="d-flex align-items-start">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3 flex-shrink-0">
                            <i class="bx bx-lock-alt fs-4 text-success"></i>
                        </div>
                        <div>
                            <h3 class="h5 mb-2">Privacy & Security</h3>
                            <p class="text-muted mb-0">Your data is only used to sync between Hevy and your personal Google Sheets™. We don't store or share your information with any third parties. All data transfer uses secure OAuth 2.0 authentication.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="text-center mt-4 fade-in-view delay-6">
                <p class="text-muted">
                    By using this add-on, you agree to our <%= link_to "Terms of Service", hevy_tracker_terms_path, class: "text-primary" %> and <%= link_to "Privacy Policy", hevy_tracker_privacy_path, class: "text-primary" %>
                </p>
            </div>

        </div>
    </div>
</section>
