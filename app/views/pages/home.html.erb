<% content_for :title, page_title("") %>
<% meta_description "Tomer Gelbhart's developer portfolio showcasing full-stack web development projects, Ruby on Rails expertise, and professional software engineering work." %>

<!-- Hero Section with Pac-Man Game -->
<section class="position-relative overflow-hidden hero-section" data-controller="pacman-game" data-pacman-game-asset-manifest-value="<%= pacman_asset_manifest.to_json %>">

    <!-- Animated Gradient Background -->
    <div class="hero-gradient-bg"></div>

    <!-- Tech Grid Background -->
    <div class="tech-grid-bg"></div>

    <!-- Floating Code Snippets -->
    <div class="floating-code">
        <div class="code-snippet code-1">&lt;div&gt;</div>
        <div class="code-snippet code-2">{ }</div>
        <div class="code-snippet code-3">function()</div>
        <div class="code-snippet code-4">=&gt;</div>
        <div class="code-snippet code-5">class</div>
        <div class="code-snippet code-6">import</div>
        <div class="code-snippet code-7">const</div>
        <div class="code-snippet code-8">&lt;/&gt;</div>
    </div>

    <!-- Pac-Man Game Overlay -->
    <div class="pacman-game-container" data-pacman-game-target="gameContainer">
        <!-- Pac-Man character -->
        <div class="pacman-character" data-pacman-game-target="pacman">
            <%= image_tag 'pacman-game/pacman/pacman_open_more.png', alt: 'Pac-Man', class: 'pacman-sprite' %>
        </div>

        <!-- Game HUD -->
        <div class="pacman-hud" data-pacman-game-target="hud">
            <div class="hud-item">
                <span class="hud-label">Score:</span>
                <span class="hud-value" data-pacman-game-target="score">0</span>
            </div>
            <div class="hud-item">
                <span class="hud-label">Lives:</span>
                <span class="hud-value" data-pacman-game-target="lives">❤️❤️❤️</span>
            </div>
        </div>
    </div>

    <div class="container position-relative zindex-5 pb-lg-5 mb-5">
        <div class="row pt-3 pb-3 py-lg-4">
            <div class="col-lg-10 col-xl-9 mx-auto text-center">

                <!-- Pac-Man Game Start Hint (visible by default) -->
                <div class="pacman-idle-hint mb-3" data-pacman-game-target="startHint" data-controller="pacman-preview">
                    <div class="d-flex align-items-center justify-content-center gap-3 flex-wrap">
                        <div class="pacman-preview">
                            <%= image_tag 'pacman-game/pacman/pacman_open_more.png', alt: 'Pac-Man', class: 'pacman-preview-sprite', data: { pacman_preview_target: 'sprite' } %>
                        </div>
                        <div class="hint-text">
                            <span class="hint-label">Use</span>
                            <kbd class="kbd-key">W</kbd>
                            <kbd class="kbd-key">A</kbd>
                            <kbd class="kbd-key">S</kbd>
                            <kbd class="kbd-key">D</kbd>
                            <span class="hint-label">or</span>
                            <kbd class="kbd-key">←</kbd>
                            <kbd class="kbd-key">↑</kbd>
                            <kbd class="kbd-key">↓</kbd>
                            <kbd class="kbd-key">→</kbd>
                            <span class="hint-label">to play</span>
                        </div>
                    </div>
                </div>

                <!-- Main Heading with Animation -->
                <h1 class="display-2 mb-4 hero-heading">
                    <span class="fade-in-up">Full-Stack Developer</span>
                    <br>
                    <span class="text-gradient d-inline-block fade-in-up delay-1">Building Modern Web Solutions</span>
                </h1>

                <!-- Subheading with Animation -->
                <p class="fs-lg text-muted mb-4 pb-2 fade-in-up delay-2">
                    MSc Computer Science student with expertise in front-end development and API integration.
                    <br>
                    Exploring AI, Machine Learning, Cloud Computing, Quantum Computing, and Full-Stack Engineering at UCD.
                </p>

                <!-- CTA Buttons with Animation -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center pb-3 fade-in-up delay-3">
                    <a href="#projects" class="btn btn-lg btn-primary shadow-primary btn-pulse">
                        <i class="bx bx-code-alt fs-5 lh-1 me-2"></i>
                        View Projects
                    </a>
                    <a href="/contact" class="btn btn-lg btn-outline-secondary">
                        <i class="bx bx-envelope fs-5 lh-1 me-2"></i>
                        Get in Touch
                    </a>
                </div>

                <!-- Tech Stack Badges with Animation -->
                <div class="d-flex flex-wrap gap-2 justify-content-center pt-4 mt-2 fade-in-up delay-4">
                    <span class="badge bg-secondary bg-opacity-10 text-body fs-sm fw-normal px-3 py-2 badge-hover">
                        <i class="bx bxl-javascript text-warning me-1"></i> JavaScript
                    </span>
                    <span class="badge bg-secondary bg-opacity-10 text-body fs-sm fw-normal px-3 py-2 badge-hover">
                        <i class="bx bxl-python text-primary me-1"></i> Python
                    </span>
                    <span class="badge bg-secondary bg-opacity-10 text-body fs-sm fw-normal px-3 py-2 badge-hover">
                        <i class="bx bxs-badge-check text-danger me-1"></i> Ruby on Rails
                    </span>
                    <span class="badge bg-secondary bg-opacity-10 text-body fs-sm fw-normal px-3 py-2 badge-hover">
                        <i class="bx bxl-java text-danger me-1"></i> Java
                    </span>
                    <span class="badge bg-secondary bg-opacity-10 text-body fs-sm fw-normal px-3 py-2 badge-hover">
                        <i class="bx bx-brain text-info me-1"></i> AI/ML
                    </span>
                </div>

            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <a href="#projects" class="scroll-indicator text-decoration-none fade-in-up delay-4">
        <div class="scroll-indicator-arrow">
            <i class="bx bx-chevron-down"></i>
        </div>
        <span class="d-block mt-2 fs-sm text-muted">Scroll to explore</span>
    </a>
</section>

<!-- Projects Section -->
<section id="projects" class="container py-5" data-controller="scroll-animation">
