<% content_for :title, page_title("Contact") %>
<% meta_description "Get in touch with Tomer Gelbhart for internship opportunities, web development projects, or collaboration. MSc Computer Science student specializing in full-stack development." %>

<!-- Hero Section -->
<section class="position-relative py-3 contact-hero-section" data-controller="scroll-animation code-typer">
    <!-- Animated Gradient Background -->
    <div class="contact-gradient-bg"></div>
    
    <!-- Active C Code Typing Animation -->
    <div class="contact-code-bg">
        <pre class="typing-code" data-code-typer-target="output"></pre>
    </div>
    
    <div class="container py-3 position-relative zindex-5">
        <div class="row justify-content-center text-center mb-3">
            <div class="col-lg-8 fade-in-view">
                <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-flex mb-3">
                    <i class="bx bx-envelope fs-2 text-primary"></i>
                </div>
                <h1 class="h2 mb-2">Let's Work Together</h1>
                <p class="fs-6 text-muted mb-0">
                    Seeking internship opportunities from May 2026 • Full-Stack Development
                </p>
            </div>
        </div>

        <!-- Contact methods - Glassmorphic Style -->
        <div class="row justify-content-center mb-3">
            <div class="col-xxl-8 col-xl-9 col-lg-10">
                <div class="d-sm-flex fade-in-view delay-1 gap-3">
                    <!-- Email Card -->
                    <div class="contact-glass-card flex-fill text-center p-4 mb-3 mb-sm-0">
                        <div class="d-inline-block contact-icon-circle mb-3">
                            <i class="bx bx-envelope"></i>
                        </div>
                        <p class="fs-sm text-light pb-2 mb-3">Feel free to drop me a line. I will respond as soon as possible.</p>
                        <a href="mailto:tomer@gelbhart.dev" class="btn btn-lg btn-primary w-100">
                            Send Email
                        </a>
                    </div>
                    
                    <!-- Phone Card -->
                    <div class="contact-glass-card flex-fill text-center p-4 mb-3 mb-sm-0">
                        <div class="d-inline-block contact-icon-circle mb-3">
                            <i class="bx bx-phone-call"></i>
                        </div>
                        <p class="fs-sm text-light pb-2 mb-3">If you need immediate assistance feel free to call me any time.</p>
                        <a href="tel:+41783283431" class="btn btn-lg btn-primary w-100">
                            Call Me
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Social links - Glassmorphic Style -->
        <div class="row justify-content-center fade-in-view delay-2 mb-3">
            <div class="col-xxl-8 col-xl-9 col-lg-10">
                <div class="contact-glass-card text-center p-4">
                    <h5 class="mb-4 text-light">Connect with Me</h5>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="https://www.linkedin.com/in/tomer-gelbhart/" target="_blank" rel="noopener" class="contact-social-btn" aria-label="LinkedIn">
                            <i class="bx bxl-linkedin"></i>
                        </a>
                        
                        <a href="https://github.com/gelbh" target="_blank" rel="noopener" class="contact-social-btn" aria-label="GitHub">
                            <i class="bx bxl-github"></i>
                        </a>
                        
                        <a href="https://maps.app.goo.gl/vX9Ec67MXAMQcnqw6" target="_blank" rel="noopener" class="contact-social-btn" aria-label="Location">
                            <i class="bx bx-map"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Availability Status -->
        <div class="row justify-content-center fade-in-view delay-4">
            <div class="col-lg-8">
                <div class="alert alert-primary d-flex align-items-center py-2 mb-0" role="alert">
                    <i class="bx bx-info-circle fs-5 me-2"></i>
                    <div class="fs-sm">
                        <strong>Available May 2026</strong> • Full-Stack Development • Backend Focus
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
