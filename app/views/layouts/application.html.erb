<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <!-- Google tag (gtag.js) - Deferred Loading -->
    <!-- Initialize dataLayer and gtag function immediately for event queuing -->
    <script>
      window.dataLayer = window.dataLayer || [];

      function gtag() {
          dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-VZ8VBVE21B');

      // Defer loading the actual GTM script until after page interactive
      // This reduces main thread blocking while maintaining tracking functionality
      (function() {
        function injectGTMScript() {
          // Check if script already loaded
          if (document.querySelector('script[src*="googletagmanager.com/gtag/js"]')) {
            return;
          }

          var script = document.createElement('script');
          script.async = true;
          script.src = 'https://www.googletagmanager.com/gtag/js?id=G-VZ8VBVE21B';
          document.head.appendChild(script);
        }

        // Load GTM after page becomes interactive
        if (document.readyState === 'complete') {
          // Page already fully loaded, use requestIdleCallback or small delay
          if ('requestIdleCallback' in window) {
            requestIdleCallback(injectGTMScript, { timeout: 2000 });
          } else {
            setTimeout(injectGTMScript, 100);
          }
        } else if (document.readyState === 'interactive') {
          // DOM ready, wait for idle or use timeout
          if ('requestIdleCallback' in window) {
            requestIdleCallback(injectGTMScript, { timeout: 2000 });
          } else {
            setTimeout(injectGTMScript, 500);
          }
        } else {
          // Wait for DOMContentLoaded, then defer
          document.addEventListener('DOMContentLoaded', function() {
            if ('requestIdleCallback' in window) {
              requestIdleCallback(injectGTMScript, { timeout: 2000 });
            } else {
              setTimeout(injectGTMScript, 500);
            }
          });
        }
      })();
    </script>
    <%# Basic Meta Tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5">
    <title><%= content_for?(:title) ? yield(:title) : page_title("") %></title>
    <%# SEO Meta Tags %>
    <meta name="description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : 'Personal portfolio and development projects by Tomer Gelbhart. Full-stack developer specializing in Ruby on Rails and modern web applications.' %>">
    <meta name="author" content="Tomer Gelbhart">
    <meta name="language" content="English">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="<%= request.original_url %>">
    <%# Open Graph Meta Tags %>
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= request.original_url %>">
    <meta property="og:title" content="<%= content_for?(:title) ? yield(:title) : page_title("") %>">
    <meta property="og:description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : 'Personal portfolio and development projects by Tomer Gelbhart. Full-stack developer specializing in Ruby on Rails and modern web applications.' %>">
    <meta property="og:image" content="<%= asset_url('logos/source/logo_social.svg') %>">
    <%# Twitter Card Meta Tags %>
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="<%= request.original_url %>">
    <meta name="twitter:title" content="<%= content_for?(:title) ? yield(:title) : page_title("") %>">
    <meta name="twitter:description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : 'Personal portfolio and development projects by Tomer Gelbhart. Full-stack developer specializing in Ruby on Rails and modern web applications.' %>">
    <meta name="twitter:image" content="<%= asset_url('logos/source/logo_social.svg') %>">
    <%# Security Tags %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%# Favicon Links %>
    <%= favicon_link_tag '/favicon.ico' %>
    <%= favicon_link_tag '/icons/favicons/favicon.svg', rel: 'icon', type: 'image/svg+xml' %>
    <%= favicon_link_tag '/icons/favicons/favicon-16x16.png', rel: 'icon', sizes: '16x16', type: 'image/png' %>
    <%= favicon_link_tag '/icons/favicons/favicon-32x32.png', rel: 'icon', sizes: '32x32', type: 'image/png' %>
    <%= favicon_link_tag '/icons/favicons/favicon-96x96.png', rel: 'icon', sizes: '96x96', type: 'image/png' %>
    <%= favicon_link_tag '/apple-touch-icon.png', rel: 'apple-touch-icon', sizes: '192x192', type: 'image/png' %>
    <meta name="apple-mobile-web-app-title" content="T. Gelbhart">
    <%= tag :link, rel: 'manifest', href: asset_path('/site.webmanifest') %>
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-config" content="/browserconfig.xml">
    <%# Preconnect to external domains %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    <link rel="dns-prefetch" href="https://www.google-analytics.com">
    <%# CDN resource hints for faster DNS resolution %>
    <link rel="dns-prefetch" href="https://unpkg.com">
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://ga.jspm.io">
    <link rel="dns-prefetch" href="https://esm.sh">
    <%# NASA Exoplanet Explorer resource hints (only on NASA page) %>
    <% if request.path == '/nasa-exoplanet-explorer' %>
      <link rel="preconnect" href="https://nasa-exoplanet-explorer.vercel.app">
      <link rel="dns-prefetch" href="https://nasa-exoplanet-explorer.onrender.com">
    <% end %>
    <%# Critical CSS and fonts %>
    <%# Async font loading to prevent render blocking %>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    </noscript>
    <%# Boxicons %>
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <%# Flag Icons %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css">
    <%# Application CSS %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%# JavaScript %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <main class="page-wrapper">
      <% unless controller_name == 'errors' %>
        <%= render 'shared/header' %>
      <% end %>
      <div class="container <%= 'mt-1 py-1 min-vh-100' unless controller_name == 'errors' %>">
        <%= yield %>
      </div>
      <% unless controller_name == 'errors' %>
        <%= render 'shared/footer' %>
        <%= link_to "#top", class: "btn-scroll-top", data: { scroll: "" } do %>
          <span class="btn-scroll-top-tooltip text-muted fs-sm me-2">Top</span>
          <i class="btn-scroll-top-icon bx bx-chevron-up"></i>
        <% end %>
      <% end %>
    </main>
  </body>
</html>