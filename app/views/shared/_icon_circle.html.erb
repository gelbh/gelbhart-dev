<% color = local_assigns.fetch(:color, 'primary') %>
<% size = local_assigns.fetch(:size, 'md') %>
<% size_classes = {'sm' => 'p-2', 'md' => 'p-3', 'lg' => 'p-4', 'xl' => 'p-5'} %>
<% icon_sizes = {'sm' => 'fs-5', 'md' => 'fs-3', 'lg' => 'fs-1', 'xl' => 'display-4'} %>
<% padding_class = size_classes[size] || size_classes['md'] %>
<% icon_size = icon_sizes[size] || icon_sizes['md'] %>
<div class="bg-<%= color %> bg-opacity-10 rounded-circle <%= padding_class %> d-inline-flex align-items-center justify-content-center">
  <i class="bx <%= icon %> <%= icon_size %> text-<%= color %>"></i>
</div>