<header class="header bg-dark navbar navbar-expand-lg position-absolute navbar-sticky" data-bs-theme="dark">
    <div class="container px-3">
        <!-- Mobile menu button -->
        <button class="navbar-toggler order-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible navigation content - Left side -->
        <div class="collapse navbar-collapse order-lg-1" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <%= link_to hevy_tracker_path, class: "nav-link d-flex align-items-center" do %>
                    <i class="bx bx-lock-open-alt fs-lg me-1"></i>
                    Hevy Tracker
                    <% end %>
                </li>
            </ul>
        </div>

        <!-- Centered Logo + Site title -->
        <%= link_to root_path, class: "navbar-brand order-2 order-lg-2 flex-shrink-1 mx-auto header-brand" do %>
        <div class="d-flex align-items-center justify-content-center">
            <%= image_tag "logos/logo_icon_only_transparent.png", width: 47, height: 47, alt: "Logo", class: "header-logo", loading: "lazy", decoding: "async" %>
            <span class="header-brand-text d-none d-sm-inline ms-2">gelbhart.dev</span>
        </div>
        <% end %>

        <!-- Right side - Theme switcher -->
        <div class="order-3 order-lg-3 flex-shrink-0">
            <div class="form-check form-switch mode-switch pe-lg-1" data-controller="theme">
                <input type="checkbox" class="form-check-input" id="theme-mode" data-theme-target="checkbox" data-action="theme#toggleTheme">
                <label class="form-check-label d-none d-sm-block" for="theme-mode" data-theme-target="lightLabel">
                    <i class="bx bx-sun fs-lg"></i>
                </label>
                <label class="form-check-label d-none d-sm-block" for="theme-mode" data-theme-target="darkLabel">
                    <i class="bx bx-moon fs-lg"></i>
                </label>
            </div>
        </div>
    </div>
</header>

<style>
    /* Core header styles */
    .header {
        z-index: 1030;
        background-color: rgba(11, 15, 25, 0.8);
        backdrop-filter: blur(8px);
        padding: 1rem 0;
    }

    /* Navbar brand/logo container */
    .header-brand {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    /* Logo and text wrapper */
    .header-brand .d-flex {
        gap: 0.75rem;
        /* Base spacing between logo and text */
    }

    /* Logo and text styling */
    .header-logo,
    .header-brand-text {
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        opacity: 0.9;
    }

    .header-brand-text {
        font-weight: 600;
        color: #fff;
        margin-left: 0.25rem;
        /* Additional base spacing */
    }

    /* Enhanced hover effects with maintained spacing */
    .header-brand:hover .header-logo {
        transform: translateY(3px) scale(1.15);
        opacity: 1;
        margin-right: 0.25rem;
        /* Compensate for scale effect */
    }

    .header-brand:hover .header-brand-text {
        transform: translateY(3px) scale(1.05);
        opacity: 1;
        margin-left: 0.5rem;
        /* Increased spacing on hover */
    }

    /* Theme switcher refinements */
    .mode-switch {
        padding: 0.5rem 0;
    }

    .mode-switch .form-check-input {
        cursor: pointer;
    }

    /* Mobile optimizations */
    @media (max-width: 991.98px) {
        .header-brand {
            position: relative;
            left: 0;
            transform: none;
        }

        .navbar-collapse {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background-color: rgba(11, 15, 25, 0.95);
            padding: 1rem;
            border-radius: 0 0 var(--bs-border-radius) var(--bs-border-radius);
        }

        .navbar-nav .nav-link {
            padding: 0.75rem 0;
        }
    }

    /* Large screen optimizations */
    @media (min-width: 992px) {
        .navbar>.container {
            position: relative;
            justify-content: space-between;
        }

        .navbar-collapse {
            flex-grow: 0;
        }

        .nav-link {
            padding: 0.5rem 1.25rem;
        }
    }

    /* Sticky header animation */
    .navbar-sticky.navbar-stuck {
        animation: navbar-show .25s ease-in-out;
        background-color: rgba(11, 15, 25, 0.95);
        box-shadow: 0 0.375rem 1rem rgba(0, 0, 0, 0.2);
    }

    @keyframes navbar-show {
        from {
            transform: translateY(-100%);
        }

        to {
            transform: translateY(0);
        }
    }
</style>