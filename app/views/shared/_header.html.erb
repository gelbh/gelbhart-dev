<header class="header navbar navbar-expand-lg bg-light shadow-sm fixed-top">
    <div class="container px-3">
        <%= link_to root_path, class: "navbar-brand pe-3" do %>
        <%= image_tag "theme/logo.svg", width: 47, alt: "Silicon" %>
        Tomer Gelbhart
        <% end %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <nav id="navbarNav" class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <%= link_to "About", about_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Projects", projects_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "Contact", contact_path, class: "nav-link" %>
                </li>
            </ul>
        </nav>

        <!-- Dark/Light mode toggle -->
        <div class="form-check form-switch mode-switch pe-lg-1 ms-auto me-4" data-controller="theme" data-bs-toggle="mode">
            <input type="checkbox" class="form-check-input" id="theme-mode">
            <label class="form-check-label d-none d-sm-block" for="theme-mode">Light</label>
            <label class="form-check-label d-none d-sm-block" for="theme-mode">Dark</label>
        </div>
    </div>
</header>