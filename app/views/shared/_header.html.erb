<header class="header bg-dark navbar navbar-expand-lg position-absolute navbar-sticky" data-bs-theme="dark">
    <div class="container px-3">
        <!-- Mobile menu button -->
        <button class="navbar-toggler order-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible navigation content - Left side -->
        <div class="collapse navbar-collapse order-lg-1" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle d-flex align-items-center <%= 'active' if current_page?(hevy_tracker_path) || current_page?(video_captioner_path) %>" href="#" id="projectsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bx bx-code-alt fs-lg me-1"></i>
                        Projects
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="projectsDropdown">
                        <li>
                            <%= link_to hevy_tracker_path, class: "dropdown-item d-flex align-items-center #{current_page?(hevy_tracker_path) ? 'active' : ''}" do %>
                            <i class="bx bx-dumbbell fs-lg me-2"></i>
                            Hevy Tracker
                            <% end %>
                        </li>
                        <li>
                            <%= link_to video_captioner_path, class: "dropdown-item d-flex align-items-center #{current_page?(video_captioner_path) ? 'active' : ''}" do %>
                            <i class="bx bx-video fs-lg me-2"></i>
                            Video Captioner
                            <% end %>
                        </li>

                    </ul>
                </li>
                <li class="nav-item">
                    <%= link_to contact_path, class: "nav-link d-flex align-items-center #{current_page?(contact_path) ? 'active' : ''}" do %>
                    <i class="bx bx-envelope fs-lg me-1"></i> Contact
                    <% end %>
                </li>
            </ul>
        </div>

        <!-- Centered Logo -->
        <%= link_to root_path, class: "navbar-brand order-2 order-lg-2 flex-shrink-1 mx-auto header-brand" do %>
        <div class="d-flex align-items-center justify-content-center">
            <%= render 'shared/logo', width: 80, height: 40, css_class: 'header-logo', id: 'header' %>
        </div>
        <% end %>

        <!-- Right side - Placeholder for balance -->
        <div class="order-3 order-lg-3 flex-shrink-0">
            <!-- Empty space for layout balance -->
        </div>
    </div>
</header>

<style>
    /* Core header styles */
    .header {
        z-index: 1030;
        background-color: rgba(11, 15, 25, 0.8);
        backdrop-filter: blur(8px);
        padding: 1rem 0;
    }

    /* Navbar brand/logo container */
    .header-brand {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
    }

    /* Logo and text wrapper */
    .header-brand .d-flex {
        gap: 0.75rem;
        /* Base spacing between logo and text */
    }

    /* Logo and text styling */
    .header-logo,
    .header-brand-text {
        transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        opacity: 0.9;
    }

    .header-brand-text {
        font-weight: 600;
        color: #fff;
        margin-left: 0.25rem;
        /* Additional base spacing */
    }

    /* Enhanced hover effects with maintained spacing */
    .header-brand:hover .header-logo {
        transform: translateY(3px) scale(1.15);
        opacity: 1;
        margin-right: 0.25rem;
        /* Compensate for scale effect */
    }

    .header-brand:hover .header-brand-text {
        transform: translateY(3px) scale(1.05);
        opacity: 1;
        margin-left: 0.5rem;
        /* Increased spacing on hover */
    }


    /* Mobile optimizations */
    @media (max-width: 991.98px) {
        .navbar-collapse {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background-color: rgba(11, 15, 25, 0.95);
            padding: 1rem;
            border-radius: 0 0 var(--bs-border-radius) var(--bs-border-radius);
        }

        .navbar-nav .nav-link {
            padding: 0.75rem 0;
        }
    }

    /* Navigation link styling */
    .nav-link {
        font-size: 0.875rem;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.75) !important;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

    /* Sliding underline effect - only for non-dropdown links */
    .nav-link:not(.dropdown-toggle)::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #6366f1 0%, #7c3aed 100%);
        transform: translateX(-50%);
        transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .nav-link:hover {
        color: rgba(255, 255, 255, 1) !important;
    }

    .nav-link:not(.dropdown-toggle):hover::after {
        width: 100%;
    }

    /* Active link state - but not for dropdown toggles (they show on hover only) */
    .nav-link.active:not(.dropdown-toggle) {
        color: #6366f1 !important;
    }

    .nav-link.active:not(.dropdown-toggle)::after {
        width: 100%;
        background: #6366f1;
    }

    /* Dropdown toggles: only show color when active, underline only on hover */
    .nav-link.dropdown-toggle.active {
        color: #6366f1 !important;
    }

    .nav-link i {
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .nav-link:hover i,
    .nav-link.active i {
        opacity: 1;
        color: #6366f1;
        transform: translateY(-2px);
    }

    /* Dropdown menu styling */
    .dropdown-menu {
        background-color: rgba(11, 15, 25, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        border-radius: 0.5rem;
        padding: 0.5rem;
        margin-top: 0.5rem;
        min-width: 220px;
    }

    .dropdown-item {
        color: rgba(255, 255, 255, 0.75);
        padding: 0.625rem 1rem;
        border-radius: 0.375rem;
        transition: all 0.2s ease;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .dropdown-item:hover {
        background-color: rgba(99, 102, 241, 0.15);
        color: #6366f1 !important;
        transform: translateX(4px);
    }

    .dropdown-item.active {
        background-color: rgba(99, 102, 241, 0.25);
        color: #6366f1;
    }

    .dropdown-item i {
        opacity: 0.8;
        transition: all 0.2s ease;
    }

    .dropdown-item:hover i,
    .dropdown-item.active i {
        opacity: 1;
        color: #6366f1;
    }

    /* Dropdown toggle styling - override all Bootstrap states */
    .header .dropdown-toggle,
    .header .nav-link.dropdown-toggle {
        background-color: transparent !important;
        background-image: none !important;
    }

    .header .dropdown-toggle:hover,
    .header .dropdown-toggle:focus,
    .header .dropdown-toggle:active,
    .header .dropdown-toggle.show,
    .header .nav-link.dropdown-toggle:hover,
    .header .nav-link.dropdown-toggle:focus,
    .header .nav-link.dropdown-toggle:active,
    .header .nav-link.dropdown-toggle.show {
        background-color: transparent !important;
        background-image: none !important;
        color: rgba(255, 255, 255, 1) !important;
        box-shadow: none !important;
        outline: none !important;
    }

    /* Dropdown toggle arrow */
    .dropdown-toggle::after {
        margin-left: 0.35rem;
        transition: transform 0.3s ease;
    }

    .dropdown-toggle[aria-expanded="true"]::after {
        transform: rotate(180deg);
    }

    /* Add subtle separator between nav items */
    .navbar-nav .nav-item:not(:last-child) {
        margin-right: 0.25rem;
    }

    /* Large screen optimizations */
    @media (min-width: 992px) {
        .navbar>.container {
            position: relative;
            justify-content: space-between;
        }

        .navbar-collapse {
            flex-grow: 0;
        }

        .nav-link {
            padding: 0.5rem 0.875rem;
        }

        .navbar-nav .nav-item:not(:last-child) {
            margin-right: 0.5rem;
        }
    }

    /* Sticky header animation */
    .navbar-sticky.navbar-stuck {
        animation: navbar-show .25s ease-in-out;
        background-color: rgba(11, 15, 25, 0.95);
        box-shadow: 0 0.375rem 1rem rgba(0, 0, 0, 0.2);
    }

    @keyframes navbar-show {
        from {
            transform: translateY(-100%);
        }

        to {
            transform: translateY(0);
        }
    }
</style>