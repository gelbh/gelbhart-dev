<%
# Reusable section header component
# Usage: <%= render 'shared/section_header', title: 'Featured Projects', subtitle: 'Check out my latest work', animation_delay: 'delay-1' %>
#
# Parameters:
# - title: Section title (required)
# - subtitle: Section subtitle (optional)
# - text_align: 'start', 'center', 'end' (optional, default: 'center')
# - animation_delay: fade-in animation delay class (optional)

text_align ||= 'center'
animation_delay ||= ''
%>

<div class="text-<%= text_align %> mb-5">
  <h2 class="h1 mb-3 fade-in-view <%= animation_delay %>"><%= title %></h2>
  <% if defined?(subtitle) && subtitle %>
    <p class="fs-lg text-muted fade-in-view <%= animation_delay ? "#{animation_delay.split('-').first}-#{animation_delay.split('-').last.to_i + 1}" : 'delay-1' %>">
      <%= subtitle %>
    </p>
  <% end %>
</div>
