# Environment Variables for gelbhart-dev

# =============================================================================
# Rails/Server Configuration
# =============================================================================

# Rails environment (development, test, production)
RAILS_ENV=development

# Master key for encrypted credentials (required for production)
# Generate with: EDITOR="code --wait" rails credentials:edit
RAILS_MASTER_KEY=

# Puma server configuration
# Maximum number of threads per worker (default: 5)
RAILS_MAX_THREADS=5

# Minimum number of threads per worker (defaults to RAILS_MAX_THREADS)
RAILS_MIN_THREADS=5

# Number of Puma worker processes (0 = single process mode, default: 0)
WEB_CONCURRENCY=0

# Server port (default: 8080)
PORT=8080

# Puma PID file path (default: tmp/pids/server.pid)
PIDFILE=tmp/pids/server.pid

# Log level (debug, info, warn, error, fatal) (default: info)
RAILS_LOG_LEVEL=info

# =============================================================================
# Database
# =============================================================================

# PostgreSQL connection URL (required for production)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# =============================================================================
# Redis
# =============================================================================

# Redis connection URL for Action Cable (default: redis://localhost:6379/1)
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/1

# =============================================================================
# Background Jobs
# =============================================================================

# Number of job worker processes (default: 1)
JOB_CONCURRENCY=1

# =============================================================================
# Google Analytics
# =============================================================================

# Google Analytics 4 Property ID
# Find this in your GA4 property settings
GA4_PROPERTY_ID=

# Google OAuth credentials (required for production)
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REFRESH_TOKEN=

# Optional: Access token (usually auto-refreshed, but can be set manually)
GOOGLE_OAUTH_ACCESS_TOKEN=

# Alternative: Path to OAuth credentials JSON file (for development)
# This file should contain your OAuth client credentials in JSON format
# Can be used instead of individual OAuth env vars above
GOOGLE_OAUTH_CREDENTIALS=

# =============================================================================
# PageSpeed API
# =============================================================================

# Google PageSpeed Insights API key
# Get from: https://console.cloud.google.com/apis/credentials
PAGESPEED_API_KEY=

# Token for authenticating PageSpeed API requests
# Used to protect the /api/page_speed endpoint
PAGESPEED_API_TOKEN=

# =============================================================================
# Testing/CI (Optional)
# =============================================================================

# Enable code coverage reporting (true/false)
COVERAGE=false

# Skip coverage threshold check (set to any value to skip)
SKIP_COVERAGE_CHECK=

# CI environment flag (set automatically by CI systems)
CI=

# =============================================================================
# Bundler (Auto-set, typically not needed)
# =============================================================================

# Path to Gemfile (automatically set by Rails/Bundler)
# BUNDLE_GEMFILE=

# Bundler version (automatically set by Bundler)
# BUNDLER_VERSION=

